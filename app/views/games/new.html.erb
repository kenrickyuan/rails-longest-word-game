<h1>New Game</h1>
<!-- <p>Find me in app/views/games/new.html.erb</p> -->
<ul class="letter-container">
  <% @letters.each do |letter| %>
  <li class="letter"><%= letter %></li>
  <% end %>
</ul>

<p class="form-title">What is the longest word you can find?</p>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="Enter you word here" class="form-answer">
  <input type="submit" value="Play!" class="form-btn">
</form>
